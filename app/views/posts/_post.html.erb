<div id="post" class="border-2 border-gray-300 w-1/3 p-2 m-2">
  <div id="post-author">
    <%= post.user.email %>
  </div>
  <div id="post-body" class="h-80 my-2 bg-gray-300 flex justify-center items-center">
    <p class="text-xl"><%= post.body %></p>
  </div>
  <div id="post-actions" class="flex justify-between w-full my-2">
    <div class="flex">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
      </svg>
    </div>
    <div class="flex">
      <p>4 comments</p>
    </div>
  </div>
  <div id="post-comments">
    <p>
      <span class="font-bold">Joe</span>
      <span class="post-comment-body">This is what I said</span>
    </p>
  </div>
</div>
